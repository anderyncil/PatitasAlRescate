<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    tools:context=".Controllers.ActividadInicioAdoptante">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarInicioAdoptante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:title="Adoptante"
        app:titleTextColor="@color/blanco"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtBienvenidoAdoptante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
        android:textSize="28sp"
        android:textColor="@color/marronPrimario"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarInicioAdoptante"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menuInicioAdoptante"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/marronPrimario"
        app:itemIconTint="@color/blanco"
        app:itemTextColor="@color/blanco"
        app:menu="@menu/menu_adoptante"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
