<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_crema"
    tools:context=".Controllers.ActividadRegistrarOrganizacion">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarRegistrarOrganizacion"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/marronPrimario"
        app:title="Registra el Albergue"
        app:titleTextColor="@color/blanco"
        app:navigationIcon="@drawable/rj_inicio_refugio_24"
        app:navigationIconTint="@color/blanco"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbarRegistrarOrganizacion"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datos del Albergue"
                android:fontFamily="@font/chewy"
                android:textColor="@color/marronOscuro"
                android:textSize="22sp"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/txt_reg_nombre"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Nombre de la Organización"
                android:background="@drawable/bg_input_rounded"
                android:paddingHorizontal="16dp"
                android:inputType="textCapWords"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <EditText
                    android:id="@+id/txt_reg_direccion"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_rounded"
                    android:paddingHorizontal="16dp"
                    android:hint="Dirección (Ej: Av. Perú 123)"
                    android:inputType="textPostalAddress" />

                <ImageButton
                    android:id="@+id/btn_abrir_mapa"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="8dp"
                    android:src="@android:drawable/ic_dialog_map"
                    android:background="@drawable/bg_input_rounded"
                    android:backgroundTint="@color/verde_persona"
                    app:tint="@color/blanco"
                    android:contentDescription="Verificar en Mapa"/>
            </LinearLayout>

            <EditText
                android:id="@+id/txt_reg_telefono"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Celular / Teléfono"
                android:background="@drawable/bg_input_rounded"
                android:paddingHorizontal="16dp"
                android:inputType="phone"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto del Refugio"
                android:fontFamily="@font/chewy"
                android:textColor="@color/marronOscuro"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_input_rounded"
                android:padding="12dp"
                android:layout_marginBottom="20dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_preview_refugio"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:background="#E0E0E0"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.MediumComponent"/>

                <Button
                    android:id="@+id/btn_seleccionar_foto"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seleccionar Galería"
                    android:fontFamily="@font/chewy"
                    android:textColor="@color/verde_persona"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credenciales de Acceso"
                android:fontFamily="@font/chewy"
                android:textColor="@color/marronOscuro"
                android:textSize="18sp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/txt_reg_correo"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Correo Electrónico"
                android:background="@drawable/bg_input_rounded"
                android:paddingHorizontal="16dp"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/txt_reg_password"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Contraseña"
                android:background="@drawable/bg_input_rounded"
                android:paddingHorizontal="16dp"
                android:inputType="textPassword"
                android:layout_marginBottom="32dp"/>

            <Button
                android:id="@+id/btn_guardar_registro"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="REGISTRAR ORGANIZACIÓN"
                android:fontFamily="@font/chewy"
                android:textSize="18sp"
                android:backgroundTint="@color/naranja_asociacion"
                android:textColor="@color/blanco"
                app:cornerRadius="16dp"/>

        </LinearLayout>
    </ScrollView>




