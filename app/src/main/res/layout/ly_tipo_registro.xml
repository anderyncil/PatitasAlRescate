<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tipo_registro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.ActividadRegistro">

    <TextView
        android:id="@+id/text_pregunta_registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/chewy"
        android:text="¿Cómo quieres ayudar?"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rj_button_imperson"
        android:layout_width="276dp"
        android:layout_height="75dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="68dp"
        android:fontFamily="@font/chewy"
        android:text="Quiero Adoptar\n(Persona)"
        android:textSize="20sp"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_pregunta_registro" />

    <Button
        android:id="@+id/rj_button_imorganizacion"
        android:layout_width="270dp"
        android:layout_height="74dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="71dp"
        android:fontFamily="@font/chewy"
        android:text="Somos un Refugio\n(Organización)"
        android:textSize="20sp"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rj_button_imperson" />



</androidx.constraintlayout.widget.ConstraintLayout>