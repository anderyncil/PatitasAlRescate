<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/iniciarsesion"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".Controllers.ActividadIniciarSesion">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tollbariniciarsesion"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"

        android:background="@color/marronPrimario"
        app:title="Iniciar Sesión"
        app:titleTextColor="@color/blanco"
        app:navigationIcon="@drawable/rj_inicio_refugio_24"
        app:navigationIconTint="@color/blanco"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tollbariniciarsesion"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/rj_logo_patitas"
            android:layout_marginBottom="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Hola de nuevo!"
            android:fontFamily="@font/chewy"
            android:textColor="@color/marronOscuro"
            android:textSize="26sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingresa tus datos para continuar"
            android:textColor="@color/texto_titulo"
            android:layout_marginBottom="32dp"/>

        <EditText
            android:id="@+id/rj_text_correr_inisesion"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Correo Electrónico"
            android:drawableStart="@drawable/rj_correo"
            android:drawablePadding="12dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/bg_input_rounded"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/rj_text_pass_inisesion"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Contraseña"
            android:drawableStart="@drawable/rj_candadonube"
            android:drawablePadding="12dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/bg_input_rounded"
            android:inputType="textPassword"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/rj_button_ingresar_inisesion"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="INGRESAR"
            android:fontFamily="@font/chewy"
            android:textSize="20sp"
            android:backgroundTint="@color/marronPrimario"
            android:textColor="@color/blanco"
            app:cornerRadius="30dp"/>

    </LinearLayout>

