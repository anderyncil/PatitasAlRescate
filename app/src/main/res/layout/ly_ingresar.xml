<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ingresar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.ActividadIngresar"
    android:background="@color/fondo_crema"
    >



    <ImageView
        android:id="@+id/rj_iniciologo_small"
        android:layout_width="205dp"
        android:layout_height="190dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/rj_logo_patitas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rj_text_titulobienvenida"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/chewy"
        android:gravity="center"
        android:text="¡BIENVENIDO A\nPATITAS AL RESCATE!"
        android:textColor="@color/texto_titulo"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rj_iniciologo_small" />

    <TextView
        android:id="@+id/rj_text_subtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tu puente a un nuevo mejor amigo."
        android:textColor="@color/texto_titulo"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rj_text_titulobienvenida" />

    <LinearLayout
        android:id="@+id/layout_botones_registro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/rj_text_subtitulo">

        <Button
            android:id="@+id/rj_button_soypersona"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/verde_persona"
            android:fontFamily="@font/chewy"
            android:text="SOY PERSONA"
            android:textColor="@color/blanco"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/rj_button_soyasociacion"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/naranja_asociacion"
            android:fontFamily="@font/chewy"
            android:text="SOY ASOCIACIÓN"
            android:textColor="@color/blanco"
            app:cornerRadius="25dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_link_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_botones_registro">

        <TextView
            android:id="@+id/rj_text_pregunta_cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Ya tienes cuenta? "
            android:textColor="@color/texto_titulo"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/rj_click_inicia_sesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicia sesión aquí"
            android:textColor="@color/naranja_asociacion"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="4dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@android:drawable/ic_menu_info_details" android:layout_margin="10dp" app:tint="@color/verde_persona"/>
        <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@android:drawable/ic_menu_info_details" android:layout_margin="10dp" app:tint="@color/naranja_asociacion"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>