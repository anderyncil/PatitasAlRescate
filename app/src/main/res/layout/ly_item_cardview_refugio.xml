<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/img_foto_refugio"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_menu_gallery"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:contentDescription="Foto del refugio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/txt_nombre_refugio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            tools:text="Refugio Patitas Felices"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintStart_toEndOf="@id/img_foto_refugio"
            app:layout_constraintTop_toTopOf="@id/img_foto_refugio"
            app:layout_constraintEnd_toStartOf="@id/btn_ver_mapa"/>

        <TextView
            android:id="@+id/txt_direccion_refugio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            tools:text="Av. Los Héroes 123, Lima"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/txt_nombre_refugio"
            app:layout_constraintTop_toBottomOf="@id/txt_nombre_refugio"
            app:layout_constraintEnd_toStartOf="@id/btn_ver_mapa"/>

        <TextView
            android:id="@+id/txt_telefono_refugio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="+51 999 999 999"
            android:textColor="?attr/colorSecondary"
            android:textSize="12sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="@id/txt_nombre_refugio"
            app:layout_constraintTop_toBottomOf="@id/txt_direccion_refugio"
            app:layout_constraintEnd_toStartOf="@id/btn_ver_mapa"/>

        <ImageButton
            android:id="@+id/btn_ver_mapa"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Ver ubicación"
            android:src="@android:drawable/ic_dialog_map"
            app:layout_centerY_toCenterOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="?attr/colorPrimary" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>