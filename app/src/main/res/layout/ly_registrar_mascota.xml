<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registrar_mascota_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_crema"
    tools:context=".Controllers.ActividadRegistrarMascota">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarRegistrarMascota"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/marronPrimario"
        app:title="Registra una Mascota "
        app:titleTextColor="@color/blanco"
        app:navigationIcon="@drawable/rj_inicio_refugio_24"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Contenido principal con Scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarRegistrarMascota">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- T铆tulo de secci贸n -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/chewy"
                android:gravity="center"
                android:text="Datos de la mascota"
                android:textColor="@color/marronOscuro"
                android:textSize="24sp" />

            <!-- Nombre -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="\t\t\tNombre de la mascota"
                app:boxStrokeColor="@color/marronPrimario"
                app:hintTextColor="@color/marronPrimario"
                app:startIconDrawable="@drawable/rj_persona">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_reg_nombre_mascota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Especie -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="\t\t\tEspecie (ej. Perro, Gato)"
                app:boxStrokeColor="@color/marronPrimario"
                app:hintTextColor="@color/marronPrimario"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_reg_especie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Raza -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="\t\t\tRaza (ej. Labrador)"
                app:boxStrokeColor="@color/marronPrimario"
                app:hintTextColor="@color/marronPrimario"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_reg_raza"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Edad -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="\t\t\tEdad en meses"
                app:boxStrokeColor="@color/marronPrimario"
                app:hintTextColor="@color/marronPrimario"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_reg_edad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="3" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Temperamento -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="\t\t\tTemperamento (ej. Juguet贸n)"
                app:boxStrokeColor="@color/marronPrimario"
                app:hintTextColor="@color/marronPrimario"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_reg_temperamento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Historia -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="\t\t\tHistoria de rescate"
                app:boxStrokeColor="@color/marronPrimario"
                app:hintTextColor="@color/marronPrimario"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_reg_historia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:gravity="top" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Secci贸n de fotos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/chewy"
                android:text="Fotos de la mascota"
                android:textColor="@color/marronOscuro"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_input_rounded"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <Button
                    android:id="@+id/btn_seleccionar_fotos"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/chewy"
                    android:text="Seleccionar Galer铆a"
                    android:textColor="@color/verde_persona" />
            </LinearLayout>

            <!-- Preview de fotos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_fotos_preview"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <!-- Bot贸n guardar -->
            <Button
                android:id="@+id/btn_guardar_mascota"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/naranja_asociacion"
                android:fontFamily="@font/chewy"
                android:text="REGISTRAR MASCOTA"
                android:textColor="@color/blanco"
                android:textSize="18sp"
                app:cornerRadius="30dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>